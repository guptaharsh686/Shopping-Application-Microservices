@model ProductDto


<form asp-action="ProductEdit" enctype="multipart/form-data">
    <br />
    <div class="container border p-3">
        <h1 class="text-white text-center">Edit Product</h1>
        <input asp-for="ProductId" hidden />
        <hr />
        <div class="row">
            <div class="col-10">
                <div class="row">
                    <div class="col-2">
                        <label class="control-label pt-2" style="font-size:20px;">Name</label>
                    </div>
                    <div class="col-10 pb-3">
                        <input class="form-control" asp-for="Name" />
                    </div>
                    <div class="col-2">
                        <label class="control-label pt-2" style="font-size:20px;">Category Name</label>
                    </div>
                    <div class="col-10 pb-3">
                        <input class="form-control" asp-for="CategoryName" />
                    </div>
                    <div class="col-2">
                        <label class="control-label pt-2" style="font-size:20px;">Description</label>
                    </div>
                    <div class="col-10 pb-3">
                        <textarea class="form-control" rows="5" asp-for="Description"></textarea>
                    </div>
                    <div class="col-2">
                        <label class="control-label pt-2" style="font-size:20px;">ImageUrl</label>
                    </div>
                    <div class="col-10 pb-3">
                        <input class="form-control" asp-for="Image" />
                        <input class="form-control" hidden asp-for="ImageLocalPath" />
                        <input class="form-control" hidden asp-for="ImageUrl" />

                    </div>
                    <div class="col-2">
                        <label class="control-label pt-2" style="font-size:20px;">Price</label>
                    </div>
                    <div class="col-10 pb-3">
                        <input class="form-control" asp-for="Price" />
                    </div>
                    <div class="col-5 offset-2">

                        <a class="btn-primary btn form-control " asp-action="ProductIndex">Back to List</a>
                    </div>
                    <div class="col-5">
                        <input type="submit" value="Update" class="btn btn-success form-control" />
                    </div>
                </div>
            </div>
            <div class="col-2">
                <img src="@Model.ImageUrl" class="w-100" alt="" />
            </div>
        </div>
    </div>
</form>

